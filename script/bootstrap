#!/usr/bin/env bash

function bootstrap {
  local shome="$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"
  source "$shome/script/profile"

  local url_node
  case "$(uname -s)" in
    Darwin)
      url_node='https://nodejs.org/dist/v5.5.0/node-v5.5.0-darwin-x64.tar.gz'
      ;;
    Linux)
      url_node='https://nodejs.org/dist/v5.5.0/node-v5.5.0-linux-x64.tar.gz'
      ;;
  esac

  local fnm_node="$(basename "${url_node}")"
  cache curl "$fnm_node" "$url_node" -sS -L
  mkdir -p "$shome/vendor"
  tar xvfz "${BASEBOX_CACHE}/curl/$fnm_node" -C vendor

  (set +f; cd vendor; ln -nfs node-v5.5.0-* node)
}

bootstrap
