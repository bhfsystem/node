#!/usr/bin/env bash

function version {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  local ver_node="$(node --version 2>/dev/null | awk '{print $1}' | perl -pe 's{^v}{}' || true)"
  local ver_yarn="$(yarn --version 2>/dev/null || true)"
  jq -n \
    --arg node "$ver_node" \
    --arg yarn "$ver_yarn" \
    '{node: $node, yarn: $yarn}'
}

version "$@"
