#!/usr/bin/env bash

function _node_profile {
  local shome="${_node_home:-"$(cd -P -- "$(dirname -- "$BASH_SOURCE")/.." && pwd -P)"}"
  PATH="$shome/exec:$PATH"

  if [[ -f "$shome/vendor/nodeenv-${NODE_VERSION}/bin/activate" ]]; then
    set +u
    source "$shome/vendor/nodeenv-${NODE_VERSION}/bin/activate"
  fi
}

_node_profile
